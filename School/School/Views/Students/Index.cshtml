@model IEnumerable<School.Data.Entities.Students>

@{
    ViewData["Title"] = "Index";
}

<h1>Estudiantes</h1>



<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo estudiante</a>
</p>
<table class="table table-success">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>Acciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.IdStudent" class="btn btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdStudent" class="btn btn-primary">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdStudent" class="btn btn-danger">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
